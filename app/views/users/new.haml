.big-content	
	.header-link.left.active= link_to "CREATE", "/users/new"
	.divider.left= "|"
	.header-link.left.inactive= link_to "USERS", "/users/index/1"
	.clearboth
	.form-content
		%h1{style: "float:center;color:green;"}= "CREATE A NEW USER"
		-if @user.errors.any?
			#error_explanation
				%h2.errors= pluralize(@user.errors.count, "error") + " prohibited this user from being saved:"
				%ul.errors
					-@user.errors.full_messages.each do |msg|
						%li.errors= msg
		.form
			%table
				= form_for :user, :url => "/users/create" do |f|
					%tr
						%td
							= f.label "Username"
						%td
							= f.text_field :username, :id => "username", :placeholder => "Input username", :autocomplete => "off"
						.clearboth
					%tr
						%td
							= f.label "Password"
						%td
							= f.password_field :password, :id => "password", :placeholder => "Input password", :autocomplete => "off"
						.clearboth
					%tr
						%td
							= f.label "Confirm password"
						%td
							= f.password_field :password_confirmation, :id => "password_confirmation", :placeholder => "Input password confirmation"
						.clearboth
					%tr
						%td
							= f.label "Email"
						%td
							= f.text_field :email, :id => "email", :placeholder => "Input email"
						.clearboth
					%tr
						%td
							= f.label "Role"
						%td
							= f.select :role, [['User','user'],['Librarian','librarian'],['Admin','admin']]
						.clearboth
					%tr
						%td
						%td
							= f.submit "Create User", :id => "submit_btn", :class => "submit_btn"
						.clearboth
					.right.error