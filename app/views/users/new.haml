.big-content	
	.header-link.left.active= link_to "#{t'welcome.admin.header_link.create'}", "/users/new"
	.divider.left= "|"
	.header-link.left.inactive= link_to "#{t'welcome.admin.header_link.users'}", "/users/index/1"
	.clearboth
	.form-content
		.h1= "#{t'welcome.admin.user_form.create_header'}"
		.form
			= form_for :user, :url => "/users/create" do |f|
				= f.label "#{t'welcome.admin.user_form.username'}"
				= f.text_field :username, :id => "username", :placeholder => "Input username", :autocomplete => "off"
				.clearboth

				= f.label "#{t'welcome.admin.user_form.password'}"
				= f.password_field :password, :id => "password", :placeholder => "Input password", :autocomplete => "off"
				.clearboth

				= f.label "#{t'welcome.admin.user_form.confirm_password'}"
				= f.password_field :password_confirmation, :id => "password_confirmation", :placeholder => "Input password confirmation"
				.clearboth

				= f.label "#{t'welcome.admin.user_form.email'}"
				= f.text_field :email, :id => "email", :placeholder => "Input email"
				.clearboth

				= f.label "#{t'welcome.admin.user_form.role'}"
				= f.select :role, [['User','user'],['Librarian','librarian'],['Admin','admin']], :id => "role"
				.clearboth

				= f.submit "#{t'welcome.admin.user_form.create_button'}", :id => "submit_btn", :class => "submit_btn"
				.clearboth
				.right.error
		-if @user.errors.any?
			#error_explanation
				%h2.errors= pluralize(@user.errors.count, "error") + " prohibited this user from being saved:"
				%ul.errors
					-@user.errors.full_messages.each do |msg|
						%li.errors= msg