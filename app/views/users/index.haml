.big-content
  .header-link.left.inactive= link_to "#{t'welcome.admin.header_link.create'}", "/users/new"
  .divider.left= "|"
  .header-link.left.active= link_to "#{t'welcome.admin.header_link.users'}", "/users/index/1"
  .clearboth
  - @users.each do |user|
    .small-content.left
      .text-content.left
        .h1.link= link_to "#{user.username.upcase}", "/users/show/#{user.id}"
        .h2 
          %b ID: 
          = user.id
        .h2
          %b= "#{t'welcome.admin.user_form.username'}:" 
          = user.username
        .h2
          %b= "#{t'welcome.admin.user_form.email'}:" 
          = user.email
        .h2
          %b= "#{t'welcome.admin.user_form.role'}:" 
          = user.role.capitalize
  .clearboth
  .paginate.right= will_paginate @books