.big-content
  .header-link.left.inactive= link_to "#{t'welcome.admin.header_link.create'}", "/users/new"
  .divider.left= "|"
  .header-link.left.active= link_to "#{t'welcome.admin.header_link.users'}", "/users/index/1"
  .right 
    = render "shared/search_form_user"
  .clearboth
  - @users.each do |user|
    .small-content.left
      .text-content.left
        .h1.link= link_to "#{user.username.upcase}", "/users/show/#{user.id}"
        .h2= user.email
        .h2= user.role.capitalize
  .clearboth
  .paginate.right= will_paginate @users
