.big-content	
	.header-link.left.active= link_to "EDIT", "/users/edit"
	.divider.left= "|"
	.header-link.left.inactive= link_to "USER", "/users/index/1"
	.clearboth
	.form-content
		.h1= "EDIT A USER"
		.form
			= form_for :user, :url => "/users/update/#{@user.id}" do |f|
				= f.label "Username"
				= f.text_field :username, :id => "username", :placeholder => "Input username", :autocomplete => "off"
				.clearboth
				= f.label "Password"
				= f.password_field :password, :id => "password", :placeholder => "Input password", :autocomplete => "off"
				.clearboth
				= f.label "Confirm password"
				= f.password_field :password_confirmation, :id => "password_confirmation", :placeholder => "Input password confirmation"
				.clearboth
				= f.label "Email"
				= f.text_field :email, :id => "email", :placeholder => "Input email"
				.clearboth
				= f.label "Role"
				= f.text_field :role, :id => "role", :placeholder => "Input role"
				.clearboth
				= f.submit "Update User", :id => "submit_btn", :class => "submit_btn"
				.clearboth
				.right.error