<div class="big-content">
	<div class="title"><%=t 'pre_welcome.title.signin' %></div>
	<div class="devise-content">
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  	<%= f.label :email, "#{t 'pre_welcome.form.email'}",:class => "email-label" %>
	  	<%= f.email_field :email, :class => "email-field", :size => "30" %>
		  <div class="clearboth"></div>

	 	 	<%= f.label :password, "#{t 'pre_welcome.form.password'}",:class => "password-label" %>
	  	<%= f.password_field :password, :class => "password-field" %>
		  <div class="clearboth"></div>

		  <% if devise_mapping.rememberable? -%>
	    	<%= f.label :remember_me, "#{t 'pre_welcome.form.remember'}", :class => "remember-label" %>
	    	<%= f.check_box :remember_me, :class => "remember-checkbox" %> 
		  <% end -%>
		  <div><%= f.submit "#{t 'pre_welcome.button.submit'}", :class => "submit" %></div>
		  <div class="clearboth"></div>

		  <div class="links-block">
  			<span><%= link_to "#{t 'pre_welcome.link.signup'}", new_registration_path(resource_name)%></span>
  			<span>|</span>
  			<span><%= link_to "#{t 'pre_welcome.link.forgot_password'}", new_password_path(resource_name)%></span>	
		  </div>
		<% end %>
	</div>
</div>