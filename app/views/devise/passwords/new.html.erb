<div class="big-content">
	<div class="title">Forgot your password?</div>
	<div class="devise-content">

		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
			<%= devise_error_messages! %>

		  <div class="left">
		  	<%= f.label :email, :class => "left email-label" %>
		  	<%= f.email_field :email, :class => "left email-field" %>
		  </div>

		  <div class="clearboth"></div>

		  <div><%= f.submit "Send me reset password instructions", :class => "right submit", :style => "width: 250px;" %></div>

		  <div class="clearboth"></div>

		  <div class="links-block">
  			<span class="left"><%= link_to "Sign in", new_session_path(resource_name), :class => "right"%></span>
  			<span class="left">|</span>
  			<span class="left"><%= link_to "Sign up", new_registration_path(resource_name), :class => "right"%></span>
  			<span class="left">|</span>
  			<span class="left"><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), :class => "right" %></span>
		  </div>
		  
  	  <div class="clearboth"></div>
		<% end %>
	</div>
</div>
