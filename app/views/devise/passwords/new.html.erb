<div class="big-content">
	<div class="title"><%=t 'pre_welcome.title.forgot_password'%></div>
	<div class="devise-content">
		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
		  <%= f.label :email, "#{t 'pre_welcome.form.email'}" %>
		  <%= f.email_field :email %>
		  <div class="clearboth"></div>

		  <%= f.submit "#{t 'pre_welcome.button.submit'}", :class => " submit" %>
		  <div class="clearboth"></div>

		  <div class="links-block">
  			<span><%= link_to "#{t 'pre_welcome.link.signin'}", new_session_path(resource_name), :class => ""%></span>
  			<span>|</span>
  			<span><%= link_to "#{t 'pre_welcome.link.signup'}", new_registration_path(resource_name), :class => ""%></span>
  			<span>|</span>
  			<span><%= link_to "#{t 'pre_welcome.link.resend_email'}", new_confirmation_path(resource_name), :class => "" %></span>
		  </div>
		  <div class="clearboth"></div>

		  <div class="small-error">
		  	<%= devise_error_messages! %>
		  </div>
		<% end %>
	</div>
</div>
