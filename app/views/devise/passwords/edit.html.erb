<div class="big-content">
	<div class="title"><%=t 'pre_welcome.title.forgot_password'%></div>
	<div class="devise-content">
		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
		  <%= f.hidden_field :reset_password_token %>

		  <%= f.label :password, "New Password" %>
		  <%= f.password_field :password %>
		  <div class="clearboth"></div>


		  <%= f.label :password_confirmation, "#{t 'pre_welcome.form.confirm_password'}" %>
		  <%= f.password_field :password_confirmation %>
		  <div class="clearboth"></div>

		  <%= f.submit "Submit", :class => " #{t 'pre_welcome.button.submit'}" %>
		  <div class="clearboth"></div>

			
		  <div class="links-block">
  			<span ><%= link_to "#{t 'pre_welcome.link.signin'}", new_session_path(resource_name), :class => ""%></span>
  			<span >|</span>
  			<span class=""><%= link_to "#{t 'pre_welcome.link.signup'}", new_registration_path(resource_name), :class => ""%></span>
  			<span >|</span>
  			<span ><%= link_to "#{t 'pre_welcome.link.resend_email'}", new_confirmation_path(resource_name), :class => "" %></span>
		  </div>
		  <div class="clearboth"></div>
		 
		  <%= devise_error_messages! %>
		<% end %>
	</div>
</div>
