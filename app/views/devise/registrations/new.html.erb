<div class="big-content">
	<div class="title"><%= t 'pre_welcome.title.signup'%></div>
	<div class="devise-content">
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  	<%= f.label :username, "#{t'pre_welcome.form.username'}"%>
	  	<%= f.text_field :username%>
		  <div class="clearboth"></div>

	  	<%= f.label :email, "#{t'pre_welcome.form.email'}", :class => " email-label" %>
	  	<%= f.email_field :email, :class => " email-field" %>
		  <div class="clearboth"></div>

	  	<%= f.label :password, "#{t'pre_welcome.form.password'}", :class => " password-label" %>
	  	<%= f.password_field :password, :class => " password-field" %>
		  <div class="clearboth"></div>

	  	<%= f.label :password_confirmation, "#{t 'pre_welcome.form.confirm_password'}", :class => " password-label" %>
	  	<%= f.password_field :password_confirmation, :class => " password-field" %>
		  <div class="clearboth"></div>

		  <%= f.submit "#{t 'pre_welcome.button.signup'}", :class => " submit" %>
		  <div class="clearboth"></div>

		  <div class="links-block">
  			<span ><%= link_to "#{t 'pre_welcome.link.signin'}", new_session_path(resource_name), :class => ""%></span>
  			<span >|</span>
  			<span ><%= link_to "#{t 'pre_welcome.link.forgot_password'}", new_password_path(resource_name), :class => "" %></span>
  			<span >|</span>
  			<span ><%= link_to "#{t 'pre_welcome.link.resend_email'}", new_confirmation_path(resource_name), :class => "" %></span>
		  </div>
  	  <div class="clearboth"></div>
  	  
	  	<%= devise_error_messages! %>
		<% end %>
	</div>
</div>
