<div class="big-content">
	<div class="title">SIGN UP</div>
		<div class="devise-content" style="width:390px;">
			<table width="390" height="100px">
				<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
				  <div class="errors"<%= devise_error_messages! %></div>
				  
				  <tr>
				  	<td class="left"><%= f.label :username, :class => "left username-label" %></td>
				  	<td class="right"><%= f.text_field :username, :class => "left username-field", :autocomplete => "off" %></td>
				  </tr>
				  
				  <tr>
				  	<td class="left"><%= f.label :email, :class => "left email-label" %></td>
				  	<td class="right"><%= f.email_field :email, :class => "left email-field", :autocomplete => "off" %></td>
				  </tr>
				  
				  <div class="clearboth"></div>

				  <tr>
				  	<td class="left"><%= f.label :password, :class => "left password-label" %></td>
				  	<td class="right"><%= f.password_field :password, :class => "left password-field" %></td>
				  </tr>
				  
				  <div class="clearboth"></div>

				  <tr>
				  	<td class="left"><%= f.label :password_confirmation, :class => "left password-label" %></td>
				  	<td class="right"><%= f.password_field :password_confirmation, :class => "left password-field" %></td>
				  </tr>

				  <div class="clearboth"></div>

				  <tr>
				  	<td>
						  <%= f.submit "Sign up", :class => "right submit" %>
						  <div class="links-block">
				  			<span class="left"><%= link_to "Sign in", new_session_path(resource_name), :class => "right"%></span>
				  			<span class="left">|</span>
				  			<span class="left"><%= link_to "Forgot password?", new_password_path(resource_name), :class => "right" %></span>
				  			<span class="left">|</span>
				  			<span class="left"><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), :class => "right" %></span>
						  </div>
						</td>
					</tr>
				  
		  	  <div class="clearboth"></div>
				<% end %>
			</table>
		</div>
</div>
