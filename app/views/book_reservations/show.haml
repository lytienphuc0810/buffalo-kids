.big-content
	.header-link.left.inactive= link_to "#{t 'welcome.user.header_link.books'}", "/books/index/1"
	.divider.left= "|"
	- if current_user.user?
		.header-link.left.inactive= link_to "#{t 'welcome.user.header_link.reservations'}", "/book_reservations/index/1"
	- else
		.header-link.left.inactive= link_to "#{t 'welcome.user.header_link.reservations'}", "/book_reservations/index/1?book_id=#{@book.id}"
	.divider.left= "|"
	.header-link.left.active= link_to "#{@book.title.truncate(20).upcase}", "/book_reservations/show/#{@book_reservation.id}"
	.clearboth
	.content
		.img.left= image_tag @book.image_url, :size => "200x200"
		.text-content.left
			.h1= @book.title.upcase
			.h3= @book.author
			.h2
				%b= t 'welcome.user.book_reservation.code'
				= @book.book_code
			.h2
				%b= t 'welcome.user.book_reservation.rating'
				= @book.rating
			.h2 
				%b= t 'welcome.user.book_reservation.borrower'
				= @book_reservation.user.username.to_s
			.h2 
				%b= t 'welcome.user.book_reservation.start'
				= @book_reservation.start_date.to_s
			.h2 
				%b= t 'welcome.user.book_reservation.due'
				= @book_reservation.due_date.to_s
			.h2
				%b= t 'welcome.user.book_reservation.description'
				= @book.description
			.h2.link= link_to "#{t 'welcome.user.link.delete'}", "/book_reservations/delete/#{@book_reservation.id}", :method => "post", :data => {:confirm => "Are you sure?"}
		.clearboth