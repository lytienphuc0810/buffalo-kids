.big-content
	- if current_user.admin? || current_user.librarian?
		.header-link.left.inactive= link_to "BOOKS", "/books/index/1"
		.divider.left= "|"
		.header-link.left.active= link_to "RESERVATIONS", "/book_reservations/index/1?book_id=#{@book_reservations.first.book.id}"
	- else
		.header-link.left.inactive= link_to "BOOKS", "/book_reservations/home/1"
		.divider.left= "|"
		.header-link.left.active= link_to "RESERVATIONS", "/book_reservations/index/1"
	.clearboth
	- i = 0
	- @book_reservations.each do |book_reservation|
		- i = i + 1
		- book = book_reservation.book_instance.book
		.small-content.left
			.img.left= image_tag book.image_url, :size => "60x60"
			.text-content.left
				.h1.link= link_to "#{book.title}", "/book_reservations/show/#{book_reservation.id}"
				.h2= book.book_code
				.h2= book.description
				.h2= book.author
				.h2= book_reservation.start_date.to_s
				.h2= book_reservation.due_date.to_s
				.h2= link_to "Delete it", "/book_reservations/delete/#{book_reservation.id}", :method => "post", :data => {:confirm => "Are you sure?"}
		- if(i % 3 == 0)
			.clearboth
	.clearboth
	.paginate.right= will_paginate @book_reservations
